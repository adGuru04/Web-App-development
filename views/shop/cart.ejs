</head>

<body>
    <%- include('../includes/navigation.ejs') %>  <!-- ðŸ—ï¸ Include navigation bar -->

    <main>
        <% if (products.length > 0) { %>  <!-- ðŸ” Check if the cart has products -->
            <ul>
                <% products.forEach(p => { %>  <!-- ðŸ”„ Loop through cart items -->
                    <li>
                        <p><%= p.productData.title %> (<%= p.qty %>)</p>  <!-- ðŸ·ï¸ Display product title and quantity -->
                        <form action="/cart-delete-item" method="POST">  <!-- âŒ Delete product from cart -->
                            <input type="hidden" value="<%= p.productData.id %>" name="productId">  <!-- ðŸ†” Hidden product ID -->
                            <button class="btn" type="submit">Delete</button>  <!-- âŒ Delete button -->
                        </form>
                    </li>
                <% }) %>
            </ul>
        <% } else { %>
            <h1>No Products in Cart!</h1>  <!-- âŒ Message when cart is empty -->
        <% } %>
    </main>

    <%- include('../includes/end.ejs') %>  <!-- ðŸ—ï¸ Include common footer -->
