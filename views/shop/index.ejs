<%- include('../includes/head.ejs') %>  <!-- ðŸ—ï¸ Include common head section -->
<link rel="stylesheet" href="/css/product.css">  <!-- ðŸŽ¨ Apply product styles -->
</head>

<body>
    <%- include('../includes/navigation.ejs') %>  <!-- ðŸ—ï¸ Include navigation bar -->

    <main>
        <% if (prods.length > 0) { %>  <!-- ðŸ” Check if products are available -->
            <div class="grid">  <!-- ðŸ—ï¸ Display products in a grid layout -->
                <% for (let product of prods) { %>  <!-- ðŸ”„ Loop through products -->
                    <article class="card product-item">  <!-- ðŸƒ Product card -->
                        <header class="card__header">
                            <h1 class="product__title"><%= product.title %></h1>  <!-- ðŸ·ï¸ Product title -->
                        </header>
                        <div class="card__image">
                            <img src="<%= product.imageUrl %>" alt="<%= product.title %>">  <!-- ðŸ–¼ï¸ Product image -->
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">â‚¹<%= product.price %></h2>  <!-- ðŸ’° Product price -->
                            <p class="product__description"><%= product.description %></p>  <!-- ðŸ“ Product description -->
                        </div>
                        <div class="card__actions">
                            <%- include('../includes/add-to-cart.ejs', {product: product}) %>  <!-- ðŸ›’ Add to cart button -->
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Products Found!</h1>  <!-- âŒ Message when no products exist -->
        <% } %>
    </main>

    <%- include('../includes/end.ejs') %>  <!-- ðŸ—ï¸ Include common footer -->
