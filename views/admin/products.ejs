<%- include('../includes/head.ejs') %>  <!-- 🏗️ Include common head section -->
<link rel="stylesheet" href="/css/product.css">  <!-- 🎨 Apply product styles -->
</head>

<body>
    <%- include('../includes/navigation.ejs') %>  <!-- 🏗️ Include navigation bar -->

    <main>
        <% if (prods.length > 0) { %>  <!-- 🔍 Check if there are products -->
            <div class="grid">  <!-- 🏗️ Display products in a grid layout -->
                <% for (let product of prods) { %>  <!-- 🔄 Loop through products -->
                    <article class="card product-item">  <!-- 🃏 Product card -->
                        <header class="card__header">
                            <h1 class="product__title"><%= product.title %></h1>  <!-- 🏷️ Product title -->
                        </header>

                        <div class="card__image">
                            <img src="<%= product.imageUrl %>"
                                alt="<%= product.title %>">  <!-- 🖼️ Product image -->
                        </div>
                        
                        <div class="card__content">
                            <h2 class="product__price">₹<%= product.price %></h2>  <!-- 💰 Product price -->
                            <p class="product__description"><%= product.description %></p>  <!-- 📝 Product description -->
                        </div>
                        <div class="card__actions">
                            <a href="/admin/edit-product/<%= product.id %>?edit=true" class="btn">Edit</a>  <!-- ✏️ Edit button -->
                            <form action="/admin/delete-product" method="POST">  <!-- ❌ Delete product form -->
                                <input type="hidden" value="<%= product.id %>" name="productId">  <!-- 🆔 Hidden product ID -->
                                <button class="btn" type="submit">Delete</button>  <!-- ❌ Delete button -->
                            </form>
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Products Found!</h1>  <!-- ❌ Message when no products exist -->
        <% } %>
    </main>

<%- include('../includes/end.ejs') %>  <!-- 🏗️ Include common footer -->
