<%- include('../includes/head.ejs') %>  <!-- ðŸ—ï¸ Include common head section -->
<link rel="stylesheet" href="/css/forms.css">  <!-- ðŸŽ¨ Apply form styles -->
<link rel="stylesheet" href="/css/product.css">  <!-- ðŸŽ¨ Apply product styles -->
</head>

<body>
   <%- include('../includes/navigation.ejs') %>  <!-- ðŸ—ï¸ Include navigation bar -->

    <main>
        <!-- ðŸ“ Product Form (Handles both Add & Edit) -->
        <form class="product-form" action="/admin/<% if (editing) { %>edit-product<% } else { %>add-product<% } %>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>  <!-- ðŸ·ï¸ Product title label -->
                <input type="text" name="title" id="title" value="<% if (editing) { %><%=product.title%><% } %>">  <!-- âœï¸ Input for product title -->
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>  <!-- ðŸ–¼ï¸ Product image URL label -->
                <input type="text" name="imageUrl" id="imageUrl" value="<% if (editing) { %><%=product.imageUrl%><% } %>">  <!-- ðŸ“· Input for image URL -->
            </div>
            <div class="form-control">
                <label for="price">Price</label>  <!-- ðŸ’° Product price label -->
                <input type="number" name="price" id="price" step="0.01" value="<% if (editing) { %><%=product.price%><% } %>">  <!-- ðŸ’² Input for price -->
            </div>
            <div class="form-control">
                <label for="description">Description</label>  <!-- ðŸ“ Product description label -->
                <textarea name="description" id="description" rows="5"><% if (editing) { %><%=product.description%><% } %></textarea>  <!-- ðŸ–Šï¸ Text area for description -->
            </div>

            <% if (editing) { %> 
            <input type="hidden" value="<%= product.id %>" name="productId">  <!-- ðŸ†” Hidden field for editing -->
            <% } %>

            <button class="btn" type="submit"><% if (editing) { %>Update Product<% } else { %>Add Product<% } %></button>  <!-- ðŸ”„ Submit button (Add/Edit) -->
        </form>
    </main>

<%- include('../includes/end.ejs') %>  <!-- ðŸ—ï¸ Include common footer -->
