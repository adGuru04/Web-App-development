<%- include('../includes/head.ejs') %>  <!-- ðŸ—ï¸ Include common head section -->
<link rel="stylesheet" href="/css/product.css">  <!-- ðŸŽ¨ Apply product styles -->
</head>

<body>
   <%- include('../includes/navigation.ejs') %>  <!-- ðŸ—ï¸ Include navigation bar -->

    <main>
        <h1>Deleted Products</h1>  <!-- ðŸ—‘ï¸ Page title for deleted products -->

        <% if (product.length > 0) { %>  <!-- ðŸ” Check if there are deleted products -->
            <article class="grid">  <!-- ðŸ—ï¸ Display products in a grid layout -->
                <% product.forEach(product => { %>  <!-- ðŸ”„ Loop through deleted products -->
                    <article class="card product-item">  <!-- ðŸƒ Product card -->
                        <header class="card__header">
                            <h1 class="product__title"><%= product.title %></h1>  <!-- ðŸ·ï¸ Product title -->
                        </header>
                        <div class="card__image">
                            <img src="<%= product.imageUrl %>"
                                alt="<%= product.title %>">  <!-- ðŸ–¼ï¸ Product image -->
                        </div>
                        <div class="card__content">
                            <h2 class="product__price">â‚¹<%= product.price %></h2>  <!-- ðŸ’° Product price -->
                            <p class="product__description"><%= product.description %></p>  <!-- ðŸ“ Product description -->
                        </div>
                        <div class="card__actions">
                            <form action="/admin/restore-product" method="POST">  <!-- ðŸ”„ Restore product form -->
                                <input type="hidden" value="<%= product.id %>" name="productId">  <!-- ðŸ†” Hidden product ID -->
                                <button class="btn" type="submit">Restore</button>  <!-- ðŸ”„ Restore button -->
                            </form>
                        </div>
                    </article>
                <% }); %>
            </article>
        <% } else { %>
            <p>No deleted products found.</p>  <!-- âŒ Message when no deleted products exist -->
        <% } %>
    </main>

<%- include('../includes/end.ejs') %>  <!-- ðŸ—ï¸ Include common footer -->
